@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FrontendRazorPages.Pages.IndexModel

<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vehicles</title>
</head>
<body>
    <h1>Vehicles</h1>

<p>
    <a asp-page="./Create">Create new Vehicle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                VIN
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VehicleDOs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VIN)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-VIN="@item.VIN">Edit</a> | 
                    <a asp-page="./Details" asp-route-VIN="@item.VIN">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>

